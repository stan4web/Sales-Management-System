        <link rel="stylesheet" type="text/css" href="~/assets/plugins/morris/morris.css">
        <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    </environment>
    @inject SalesApp.Data.ApplicationDbContext _context
    @{
        var userdetails = _context.Users.FirstOrDefault(x => x.UserName == User.Identity.Name);
         if(userdetails != null)
        {
            ViewBag.UserName = userdetails.FirstName;
            ViewBag.ImageUrl = userdetails.ImageUrl;
        }
    }
</head>
<body>
    <div class="main-wrapper">

        <div class="header">
            <div class="header-left">
                <a href="#" class="logo">
                    <img src="~/images/pos-logo.png" height="60" alt="">
                </a>
            </div>
            <div class="page-title-box pull-left">
                <h3>Multiskills Mobile POS</h3>
            </div>
            <a id="mobile_btn" class="mobile_btn pull-left" href="#sidebar"><i class="fa fa-bars" aria-hidden="true"></i></a>
            <ul class="nav user-menu pull-right">


                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="~/Uploads/Passports/@(System.IO.Path.GetFileName(ViewBag.ImageUrl))" width="40" height="40" alt="Admin">
                            <span class="status online"></span>
                        </span>
                        <span>@ViewBag.UserName</span>
                    </a>
                    <div class="dropdown-menu">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </li>
            </ul>

        </div>


        <div class="content" style="margin-top:100px;margin-left:40px">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" asp-action="Index" asp-controller="Dashboard">Dashboard</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-action="Index" asp-controller="POS">Categories </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#">Receipt</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Dropdown link
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="#">Action</a>
                                        <a class="dropdown-item" href="#">Another action</a>
                                        <a class="dropdown-item" href="#">Something else here</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>

            </div>


            <div class="row">
                <div class="col-3"> @await Html.PartialAsync("_CartPartial")</div>
                <div class="col-9">  @RenderBody()</div>
            </div>
        </div>

        
    </div>

